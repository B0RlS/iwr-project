div id="profile"

  div class="bloktron" id="profile-info-head"
    = image_tag gravatar_image_url(current_user.email, size: 100), height: 100, width: 100, class: 'rounded-circle
    = image_tag(@profile.avatar)
    div class="container"
      h1
        | #{@profile.user_name}  #{@profile.user_surname}
  div class="bloktron" id="profile-info"
    h4 Personal information
    p class="lead"
      | Email: #{@profile.user_email}
      br
      | Country: #{@profile.country_name}
      br
      | City: #{@profile.city}
      br
      | Telephone: #{@profile.telephone}
      br
      | Birthday: #{@profile.user_birthday}
    = link_to 'Edit', edit_profile_path, :class => 'btn btn-lg btn-primary', :id => 'edit_button'

