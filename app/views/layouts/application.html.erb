<!DOCTYPE html>
<html>
  <head>
    <title>IwrProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h3 class="my-0 mr-md-auto font-weight-bold"> <%= link_to 'IWR', root_path, id: 'logo' %></h3>

    <% if logged_in? %>
      <span class="btn btn-outline-primary"><%= link_to 'Profile', current_user %></span>
      <span class="btn btn-outline-primary"><%= link_to 'Log out', logout_path, method: 'delete' %></span>
  <% else %>
      <span class="btn btn-outline-primary"><%= link_to 'Log in', login_path %></span>
    <% end %>

  </div>
  <% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
  <% end %>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
